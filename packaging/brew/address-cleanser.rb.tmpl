class AddressCleanser < Formula
  desc "Parse, validate, and format US addresses"
  homepage "https://github.com/joshuboi77/address-cleanser"
  version "{{VERSION}}"

  on_macos do
    if Hardware::CPU.arm?
      url "https://github.com/joshuboi77/address-cleanser/releases/download/v{{VERSION}}/address-cleanser-macos-arm64.zip"
      sha256 "{{SHA256_ARM64}}"
    else
      url "https://github.com/joshuboi77/address-cleanser/releases/download/v{{VERSION}}/address-cleanser-macos-x86_64.zip"
      sha256 "{{SHA256_X64}}"
    end
  end

  def install
    bin.install "address-cleanser"
  end

  test do
    output = shell_output("#{bin}/address-cleanser --help")
    assert_match "Usage:", output
  end
end
